{
    "manifest_version": 2,
    "name": "Instant View",
    "version": "0.1",
    "description": "Save articles to Telegram and read them later via Instant View",
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "64": "64.png"
    },
    "applications": {
        "gecko": {
            "id": "fxtgiv@shikhov",
            "strict_min_version": "57.0"
        }
    },
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "code.js"
        ]
    }
}